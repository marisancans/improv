.row
  .col.s2
    placeholder
  .col.s7
    = image_tag 'http://placehold.it/2000x500', class: 'responsive-img'
    .col.s2.red
      s
    .col.s7.blue
      a
    .col.s3
  .col.s3
    %h6.center-align.tooltipped(data-position="bottom" data-delay="50" data-tooltip='#{render partial: 'shared/feeds/tooltip', locals: {subscribed_feeds: @subscribed_feeds}}')
      My feeds:
    - @entries.each do |entry|
      %br
      .hvr-underline-from-left= link_to entry.title, entry.url, target: '_blank'
      .feed-published= entry.published