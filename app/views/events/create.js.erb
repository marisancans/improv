
$grid = $('.grid-todays-events')
$item = $("<%= j render @event %>")
$grid.prepend($item).isotope('insert', $item).isotope('arrange')

Materialize.toast('Event successfully created', 5000, 'notice')

$('#new_event')[0].reset();
$('#<%= @date.strftime("%Y-%m-d") %>').html("<%= j render partial: 'day', locals: { events: @events } %>")