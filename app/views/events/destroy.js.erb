$grid = $('.grid-todays-events')
$item = $("#fetched_event_<%= @event.id %>")
$grid.isotope('remove', $item).isotope('arrange')

$grid = $('.grid-upcoming-events')
$item = $("#upcoming_event_<%= @event.id %>")
$grid.isotope('remove', $item).isotope('arrange')

$('#<%= @date.strftime("%Y-%m-%d") %>').html("<%= j render partial: 'day', locals: { events: @events, date: @date } %>")

Materialize.toast('Event successfully deleted', 5000, 'notice')