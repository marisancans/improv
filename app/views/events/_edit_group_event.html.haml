.row
  Editing 
  = @date  
.row
  = form_tag events_path, remote: true do
    #event_fields
      - @events.each do |event|
        = fields_for "events[]", event do |pf|
          .col.m3.time-select= pf.time_select(:start_time)
          .col.m9.title= pf.text_field :name

    = hidden_field_tag 'date', @date
    = submit_tag "Save", id: 'save-event-button'
    
