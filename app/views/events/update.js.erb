
$item = $("#fetched_event_<%= @event.id %>")
$item.html("<%= j render partial: "event", locals: { event: @event, event_id_prefix: 'fetched' } %>")

$item = $("#upcoming_event_<%= @event.id %>")
$item.html("<%= j render partial: "event", locals: { event: @event, event_id_prefix: 'upcoming' } %>")

Materialize.toast('Event successfully updated', 5000, 'notice')

$('#<%= @date.strftime("%Y-%m-%d") %>').html("<%= j render partial: 'day', locals: { events: @events } %>")
$('#new_event')[0].reset()