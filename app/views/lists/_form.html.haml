= form_for @new_list, url: list_create_path, remote:true do |f|
  - if @new_list.errors.any?
    #error_explanation
      %h2
        = pluralize @new_list.errors.count, "error"
        prohibited this list from being saved:
      %ul
        - @new_list.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_field :title
  .actions
    = f.submit